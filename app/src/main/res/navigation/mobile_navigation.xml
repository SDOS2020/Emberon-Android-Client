<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="org.emberon.winscan.home.ui.HomeFragment"
        android:label="@string/pay"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="org.emberon.winscan.dashboard.ui.DashboardFragment"
        android:label="@string/title_transactions"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="org.emberon.winscan.notifications.ui.NotificationsFragment"
        android:label="@string/title_rewards"
        tools:layout="@layout/fragment_notifications" />
</navigation>